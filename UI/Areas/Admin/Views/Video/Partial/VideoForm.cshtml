@model DTO.VideoDTO

<div class="box-body">
    <div class="form-group">
        <label>Title</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Title" })
        @Html.ValidationMessageFor(x => x.Title)
    </div>
    <div class="form-group">
        <label>Video Path</label>
        @Html.TextBoxFor(x => x.OriginalVideoPath, new { @class = "form-control", @placeholder = "Videp Path" })
        @Html.ValidationMessageFor(x => x.OriginalVideoPath)
        <input type="number" value="@Model.ID" name="ID" hidden />
    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</div>
